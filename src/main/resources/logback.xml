<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false">

	<property name="myPattern"
		value="%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{24} - %msg%n" />

	<statusListener
		class="ch.qos.logback.core.status.NopStatusListener" />

	<appender name="STDOUT"
		class="ch.qos.logback.core.ConsoleAppender">
		<layout class="ch.qos.logback.classic.PatternLayout">
			<Pattern>
				${myPattern}
			</Pattern>
		</layout>
	</appender>

	<appender name="APPLOG"
		class="ch.qos.logback.core.FileAppender">
		<file>C:\Users\Adminl\Desktop\logs\logs.log</file>
		<layout class="ch.qos.logback.classic.PatternLayout">
			<Pattern>${myPattern}</Pattern>
		</layout>
	</appender>

	<logger level="info" name="fr.gtm.project.proxibanque.web"
		additivity="false">

		<appender-ref ref="STDOUT" />

	</logger>
	
	<logger level="info" name="fr.gtm.project.proxibanque.business"
		additivity="false">

		<appender-ref ref="STDOUT" />

	</logger>
	
	<logger level="debug" name="org.springframework.web"
		additivity="false">
		<appender-ref ref="STDOUT" />
</logger>





</configuration>